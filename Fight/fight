{
      variable

      private bool isFire;

      // Start is called befor the first frame update
      void Start()
      {
        
      }

      // method

      // Update is called befor the first frame
      void update()
      {
         
      }

      void Fire()
      {
        StartCoroutine Fire()
      }

      IEnumerator Fire()
      {
          if(Input.GetKeyDown.E)
          {
             isFire = true;
             anim.SetInteger("transition", 3);
             yield return new waitForSeconds(0.2);
              anim.SetInteger("transition", 3);
          }
      }
}